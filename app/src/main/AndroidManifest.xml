<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cristiano.bcreader">

    <uses-permission android:name="ANDROID.PERMISSION.CAMERA" />
    <uses-permission android:name="ANDROID.PERMISSION.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="ANDROID.PERMISSION.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContinuousCaptureActivity"
            android:label="@string/title_activity_continuous_capture" />
        <activity
            android:name=".AddBarCode"
            android:label="Adicionar Carga" />
        <activity
            android:name=".RemoveBarCode"
            android:label="@string/title_activity_remove_bar_code" />
        <activity
            android:name=".BaseScan"
            android:label="@string/title_activity_base_scan" />
        <activity android:name=".MedicineActivity" />
        <activity
            android:name=".ProspectusActivity"
            android:label="@string/title_activity_prospectus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetailsActivity"></activity>
    </application>

</manifest>